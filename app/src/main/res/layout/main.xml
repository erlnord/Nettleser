<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_activity_view"
    android:tag="main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <EditText
        android:id="@+id/website_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/https"
        android:hint="@string/website_text"
        android:layout_gravity="top|left|bottom"
        android:layout_toLeftOf="@+id/go_button"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:imeOptions="actionDone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="-3dp"
        />

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/go"
        android:id="@+id/go_button"
        android:clickable="true"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/set_button"
        android:onClick="openURL"
        />

    <Button
        android:id="@+id/set_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/settings"
        android:clickable="true"
        android:onClick="clickedSetting"
        android:layout_gravity="top|right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />


    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/website_text"
        />

</RelativeLayout>

