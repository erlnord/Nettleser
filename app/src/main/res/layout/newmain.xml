<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:tag="newmain"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <EditText
        android:id="@+id/website_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/https"
        android:hint="@string/website_text"
        android:layout_gravity="left|bottom"
        android:layout_toLeftOf="@+id/go_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        />

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/go"
        android:id="@+id/go_button"
        android:clickable="true"
        android:onClick="clickedButton"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/set_button"
        />

    <Button
        android:id="@+id/set_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/settings"
        android:clickable="true"
        android:onClick="clickedSetting"
        android:layout_gravity="bottom|right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />


    <WebView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/website_text" />
</RelativeLayout>

